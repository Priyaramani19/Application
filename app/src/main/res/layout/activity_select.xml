<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".select_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/gradient">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_menu_24">

                </ImageView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="C Programming"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="@drawable/tutorialpoint">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tutorialspoint"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/p_mize"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/programize">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Programize"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/g_99"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/guru99">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guru-99"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/learn_c"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/c_learn">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn - C"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/stn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:src="@drawable/studytonight">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Studytonight"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/w3s"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/w3schools">

                    </ImageView>

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_effect"
                        android:src="#00000000">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="W3Schools"
                    android:textColor="@color/black"
                    android:gravity="center">

                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>